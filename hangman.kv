
<Labels>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDLabel:
        id: W
        text: 'miky'
    MDLabel:
        id: L
        text: 'ortiz'

<NewSnackBar>
    MDIconButton:
        pos_hint: {'center_y': .5}
        icon: root.icon



<MainLayout>
    screen_manager: manager
    nav_drawer: nav_drawer


    MDFloatLayout:
        size: root.width, root.height
        id: main



        MDToolbar:
            id: tool
            title: "Hang Man"
            pos_hint: {"top":1}
            md_bg_color: [255/255, 119/255, 0/255, 1]
            elevation: 30
            specific_text_color: (255/255,255/255,255/255, 1)
            icon_color: [255/255, 255/255, 255/255, 1]

            left_action_items:
                [["menu", lambda x: root.panel()]]


        MDNavigationLayout:
            ScreenManager:
                id: manager

                MDScreen:
                    name: "intro"


                    MDFloatLayout:
                        size: root.width, root.height
                        id: Intro
                        value_opacity: 0


                        canvas.before:
                            Color:
                                rgba: (255/255,255/255,255/255,Intro.value_opacity)
                            Rectangle:
                                size: self.width, self.height - tool.height
                                pos: self.pos
                                source: "Front.jpg"








                MDScreen:
                    name: "login"

                    MDFloatLayout:

                        canvas.before:
                            Color:
                                rgba: (50/255,50/255,50/255,0.95)
                            Rectangle:
                                size: self.width, self.height - tool.height
                                pos: self.pos
                                source: "space.jpg"

                        MDCard:
                            id: card
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            radius: [10]
                            elevation: 30
                            md_bg_color: [89/255, 42/255, 1/255, 1]
                            size_hint: None,None
                            size: 400,450
                            MDFloatLayout:

                                MDLabel:
                                    text: "[font=RAVIE] Login [/font] "
                                    markup: True
                                    color: 1,1,1,1
                                    pos_hint: {"top":0.9, "center_x": 0.5}
                                    size_hint: None,None
                                    font_size: 40
                                    size: 180,50
                                    halign: "center"


                                MDTextField:
                                    hint_text: "Name"
                                    mode: "rectangle"
                                    icon_right: "baseball"
                                    icon_right_color: (74/255,35/255,0/255)
                                    size_hint: None,None
                                    size: 200,50
                                    pos_hint: {"top":0.7, "center_x": 0.5}
                                    current_hint_text_color: 1, 1, 1, 1
                                    id: LoginName
                                    #line_color_normal: (255/255,191/255,0/255)
                                    #text_color: (255/255,191/255,0/255)

                                MDRoundFlatIconButton:
                                    text: "Login"
                                    icon: "android"
                                    pos_hint: {"top":0.5, "center_x": 0.5}
                                    on_press:
                                        root.LogIn()


                MDScreen:
                    name: "Game"
                    MDFloatLayout:
                        canvas.before:
                            Color:
                                rgb: (70/255,70/255,70/255, 0.95)
                            Rectangle:
                                size: self.width, self.height - tool.height
                                pos: self.pos
                                source: "GamePage.jpg"
                        MDLabel:
                            text: ""
                            color: (255/255,255/255,255/255)
                            id: UserName
                            pos_hint: {"center_y":0.85, "center_x": 0.7}
                            size_hint: None,None
                            size: 300,25
                            halign: "center"
                            canvas.before:
                                Color:
                                    rgb: [255/255, 119/255, 0/255, 1]

                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [15]



                        MDFloatLayout:
                            size_hint: None,None
                            size: 450, 450
                            pos_hint: {"center_y":0.6, "center_x": 0.2}



                            Image:
                                id: body
                                source: "body.png"
                                pos_hint: {"center_y":0.585, "center_x": 0.57}
                                size_hint: None,None
                                size: 100, 100


                            Image:

                                source: "hanger.png"
                                pos_hint: {"center_y":0.5, "center_x": 0.5}
                                size_hint: None,None
                                size: 450, 450

                            Image:
                                id: Head
                                source: "Head.png"
                                pos_hint: {"center_y":0.68, "center_x": 0.535}
                                size_hint: None,None
                                size: 100, 100



                            Image:
                                id: left_arm
                                source: "left_arm.png"
                                pos_hint: {"center_y":0.59, "center_x": 0.64}
                                size_hint: None,None
                                size: 90, 90

                            Image:
                                id: right_arm
                                source: "right_arm.png"
                                pos_hint: {"center_y":0.59, "center_x": 0.49}
                                size_hint: None,None
                                size: 90, 90

                            Image:
                                id: right_leg
                                source: "right_leg.png"
                                pos_hint: {"center_y":0.43, "center_x": 0.57}
                                size_hint: None,None
                                size: 170, 170

                            Image:
                                id: left_leg
                                source: "left_leg.png"
                                pos_hint: {"center_y":0.43, "center_x": 0.6}
                                size_hint: None,None
                                size: 170, 170


                    MDBoxLayout:
                        size_hint: None,None
                        size: 700, 150
                        pos_hint: {"center_y":0.2, "center_x": 0.5}


                        MDFloatLayout:

                            canvas.before:
                                Color:
                                    rgb: [89/255, 42/255, 1/255, 1]

                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [10,0,0,10]

                            MDTextField:
                                hint_text: "Guess The Word"
                                id: TextWord
                                mode: "rectangle"
                                icon_right: "baseball"

                                size_hint: None,None
                                size: 200,50
                                pos_hint: {"center_y":0.8, "center_x": 0.5}
                                current_hint_text_color: 1, 1, 1, 1

                                line_color_normal: (255/255,191/255,0/255)
                                text_color: (255/255,191/255,0/255)
                                icon_right_color: (255/255,191/255,0/255)

                            MDRectangleFlatIconButton:
                                text: "Guess"
                                id: ButtonWord
                                on_press: root.GuessWord()
                                icon: "android"
                                pos_hint: {"center_y":0.3, "center_x": 0.5}
                                theme_icon_color: "Custom"
                                icon_color: (240 / 255, 112 / 255, 0 / 255, 1)
                                line_color: (240 / 255, 112 / 255, 0 / 255, 1)
                                text_color: (240 / 255, 112 / 255, 0 / 255, 1)

                        MDFloatLayout:

                            canvas.before:
                                Color:
                                    rgb: [89/255, 42/255, 1/255, 1]

                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [0,10,10,0]

                            MDTextField:

                                id: guess_letter
                                hint_text: "Guess The entire Letter"
                                mode: "rectangle"
                                icon_right: "baseball"
                                icon_right_color: (255/255,191/255,0/255)
                                size_hint: None,None
                                size: 200,50
                                pos_hint: {"center_y":0.8, "center_x": 0.5}
                                current_hint_text_color: 1, 1, 1, 1
                                max_text_length: 1
                                helper_text: "Massage"
                                line_color_normal: (255/255,191/255,0/255)
                                text_color: (255/255,191/255,0/255)

                            MDRectangleFlatIconButton:
                                id: button_letter
                                text: "Guess"
                                icon: "android"
                                pos_hint: {"center_y":0.3, "center_x": 0.5}
                                on_press: root.GuessLetter()
                                theme_icon_color: "Custom"
                                icon_color:(240 / 255, 112 / 255, 0 / 255, 1)
                                line_color: (240 / 255, 112 / 255, 0 / 255, 1)
                                text_color: (240 / 255, 112 / 255, 0 / 255, 1)



                    MDBoxLayout:
                        size_hint: None,None
                        size: 450, 100
                        pos_hint: {"center_y":0.7, "center_x": 0.7}
                        id: word_container

                        canvas.before:
                            Color:
                                rgb: [89/255, 42/255, 1/255, 1]

                            RoundedRectangle:
                                size: word_container.size
                                pos: word_container.pos
                                radius: [10]

                    Image:
                        id: winner

                        source: "star.png"
                        #pos_hint: {"center_x":0.5, "center_y":0.5}


                    Image:
                        id: winner_two
                        source: "star.png"
                        #pos_hint: {"center_x":0.5, "center_y":0.5}


                    Image:
                        id: winner_three
                        source: "star.png"
                        #pos_hint: {"center_x":0.5, "center_y":0.5}

                    Image:
                        id: winner_four
                        source: "star.png"
                        #pos_hint: {"center_x":0.5, "center_y":0.5}


                    MDBoxLayout:
                        id: win
                        size_hint: 0,0
                        pos_hint: {"center_y":0.5, "center_x": 0.5}
                        orientation: 'vertical'
                        image: ''
                        canvas.before:
                            Color:
                                rgb: (255/255,255/255,255/255)

                            Rectangle:
                                size: win.size
                                pos: win.pos
                                source: win.image

                        Image:
                            id: FinalImg
                            opacity: 0.2
                            source: "final_img.png"
                            size_hint: None, None
                            size: 300,300
                            pos_hint: {"center_y":0.2, "center_x": 0.5}
                        MDBoxLayout:

                            MDRoundFlatIconButton:
                                icon: "android"
                                text: "restart"
                                on_press:
                                    root.StartGame(None)

                            MDRoundFlatIconButton:
                                icon: "android"
                                text: 'logout'
                                on_press:
                                    root.LogOut(None)
                MDScreen:

                    id: ortiz
                    spacing: "6dp"
                    size_hint_y: None
                    height: "120dp"

                    MDBoxLayout
                        orientation: "vertical"

                        MDLabel:
                            id: DATE
                            text: ''


                        MDLabel:
                            id: W
                            text: ''

                        MDLabel:
                            id: L
                            text: ''

                MDScreen:
                    name: "record"

                    MDRelativeLayout:

                        canvas.before:
                            Color:
                                rgba: (70/255,70/255,70/255, 0.95)

                            Rectangle:
                                size: self.width, self.height - tool.height
                                pos: self.pos
                                source: "recordPhoto.jpg"


                        MDBoxLayout:
                            rounded: 15
                            pos_hint: {'center_x':0.5, 'center_y':0.5}
                            size_hint: 0.5, 0.6




                            canvas.before:
                                Color:
                                    rgb: (255/255,255/255,255/255,1)

                                Line:
                                    rounded_rectangle: (self.pos[0],self.pos[1], self.size[0], self.size[1], self.rounded)
                                    width: 5

                            MDBoxLayout:
                                canvas.before:
                                    Color:
                                        rgb: (255/255,123/255,0/255, 1)

                                    RoundedRectangle:
                                        size: self.size
                                        pos: self.pos
                                        radius: [15]


                                ScrollView:
                                    MDList:
                                        id: ListOfPlayers

                MDScreen:
                    name: "menu"

                    MDFloatLayout:

                        canvas.before:
                            Color:
                                rgba: (70/255,70/255,70/255, 0.95)

                            Rectangle:
                                size: self.width, self.height - tool.height
                                pos: self.pos
                                source: "ManuPhoto.jpg"

                        MDLabel:
                            text: "[font=RAVIE] HangMang [/font] "
                            markup: True
                            color: (255/255,255/255,255/255, 1)
                            pos_hint: {"center_y":0.8, "center_x": 0.5}
                            font_size: 35
                            halign: "center"

                        MDRoundFlatIconButton:
                            text: "Start To Play"
                            icon: "nintendo-game-boy"
                            font_size: 30

                            pos_hint: {"center_y":0.2, "center_x": 0.5}
                            theme_text_color: 'Custom'
                            text_color:[123/255, 200/255, 100/255, 1]
                            on_press:
                                root.screen_manager.current = "Game"
                                root.Start_Game()

                MDScreen:
                    name: "dict"


                    MDFloatLayout:
                        id: miky

                        canvas.before:
                            Color:
                                rgba: (70/255,70/255,70/255, 0.95)

                            Rectangle:
                                size: miky.width, miky.height - tool.height
                                pos: self.pos
                                source: "dictPage.jpg"
                        MDLabel:
                            color: (255/255,255/255,255/255, 1)
                            text: "Seek For a Word"
                            pos_hint: {"top":0.7, "center_x": 0.5}
                            size_hint: None,None
                            font_size: 30
                            size: 220,50
                            halign: "center"
                            canvas.before:
                                Color:
                                    rgb: (255/255,123/255,0/255, 0.5)

                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [15]


                        MDTextField:
                            hint_text: "Word"
                            mode: "rectangle"
                            icon_right: "baseball"
                            icon_right_color: (255/255,191/255,0/255)
                            line_color_normal: (255/255,191/255,0/255)
                            text_color: (255/255,191/255,0/255)
                            size_hint: None,None
                            size: 200,50
                            pos_hint: {"top":0.5, "center_x": 0.5}
                            current_hint_text_color: 1, 1, 1, 1
                            id: TextSeekWord


                        MDRoundFlatIconButton:
                            icon: "android"
                            text: "Dictionary"
                            pos_hint: {"top":0.3, "center_x": 0.5}
                            size_hint: None,None
                            font_size: 30
                            size: 150,50
                            halign: "center"
                            id: DictButton
                            on_press:
                                root.SeekWord()





                MDScreen:
                    name: "word"
                    MDFloatLayout:
                        canvas.before:
                            Color:
                                rgba: (70/255,70/255,70/255, 0.95)

                            Rectangle:
                                size: self.width, self.height - tool.height
                                pos: self.pos
                                source: "SearchPage.jpg"


                        MDLabel:
                            text: ""
                            id: w
                            color: (255/255,255/255,255/255, 1)
                            font_size: 30
                            pos_hint: {"center_x": 0.7, "center_y": 0.8}
                            halign: "center"
                            size_hint: None, None
                            size: 230,50
                        MDLabel:
                            color: (255/255,255/255,255/255, 1)
                            text: "Type of Word:"
                            id: type
                            font_size: 30
                            pos_hint: {"center_x": 0.2, "center_y": 0.8}
                            halign: "center"
                            size_hint: None, None
                            size: 230,50

                        MDBoxLayout:
                            md_bg_color: [74/255, 47/255, 21/255, 1]
                            size_hint: None, None
                            size: root.width, 20
                            radius: [15]
                            pos_hint: {"center_x": 0.5, "center_y": 0.7}


                        MDLabel:
                            text: "Definition: "
                            pos_hint: {"center_x": 0.5, "center_y": 0.6}
                            font_size: 30
                            color: (255/255,255/255,255/255, 1)
                            halign: "center"


                        MDBoxLayout:
                            md_bg_color: [74/255, 47/255, 21/255, 1]
                            size_hint: None, None
                            size: root.width, 20
                            radius: [15]
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}


                        MDLabel:
                            text: ""
                            id: Defi
                            pos_hint: {"center_x": 0.5, "center_y": 0.35}
                            font_size: 15
                            color: (255/255,255/255,255/255, 1)
                            halign: "center"

                        MDBoxLayout:
                            md_bg_color: [74/255, 47/255, 21/255, 1]
                            size_hint: None, None
                            radius: [15]
                            size: root.width, 20
                            pos_hint: {"center_x": 0.5, "center_y": 0.18}




        MDNavigationDrawer:
            id: nav_drawer

            Panel:
                screen_manager: manager
                nav_drawer: nav_drawer

                MDFloatLayout:

                    canvas.before:
                        Color:
                            rgba: [255/255, 119/255, 0/255, 1]

                        Rectangle:
                            size: self.size
                            pos: self.pos

                    MDToolbar:
                        #id: tool
                        title: "Panel"
                        pos_hint: {"top":1,"center_x": 0.5}
                        specific_text_color: (255/255,255/255,255/255, 1)
                        md_bg_color: [89/255, 42/255, 1/255, 1]
                    FitImage:
                        source: "icon.jpg"
                        size_hint: None,None
                        size: 100, 100
                        pos_hint: {"center_y":0.8, "center_x": 0.5}
                        radius: [15,15]

                    MDList:
                        pos_hint: {"center_y":0.5, "center_x": 0.5}

                        OneLineIconListItem:
                            text: "Dictionary"
                            text_color:[255/255, 255/255, 255/255, 1]
                            theme_text_color: "Custom"
                            on_press:
                                root.screen_manager.current = "dict"
                                root.nav_drawer.set_state('close')
                            IconLeftWidget:
                                icon: "book-open-variant"
                                theme_text_color: 'Custom'
                                text_color:[255/255, 255/255, 255/255, 1]

                        OneLineIconListItem:
                            text: "Record"
                            text_color:[255/255, 255/255, 255/255, 1]
                            theme_text_color: "Custom"
                            on_press:

                                root.ShowRecord()
                                root.nav_drawer.set_state('close')
                            IconLeftWidget:
                                icon: "scoreboard"
                                theme_text_color: 'Custom'
                                text_color:[255/255, 255/255, 255/255, 1]
                        OneLineIconListItem:
                            text: "Menu"
                            text_color:[255/255, 255/255, 255/255, 1]

                            theme_text_color: "Custom"

                            on_press:
                                root.screen_manager.current = "menu"
                                root.nav_drawer.set_state('close')

                            IconLeftWidget:
                                icon: "microsoft-xbox-controller-menu"
                                theme_text_color: 'Custom'
                                text_color:[255/255, 255/255, 255/255, 1]


                        OneLineIconListItem:
                            text: "Sign out"
                            text_color:[255/255, 255/255, 255/255, 1]
                            theme_text_color: "Custom"

                            on_press:
                                root.screen_manager.current = "login"
                                root.nav_drawer.set_state('close')
                            IconLeftWidget:
                                icon: "logout"
                                theme_text_color: 'Custom'
                                text_color:[255/255, 255/255, 255/255, 1]
